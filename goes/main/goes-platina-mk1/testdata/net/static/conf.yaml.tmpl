volume: "/testdata/net/static/"
mapping: "/etc/frr"
routers:
- hostname: CA-1
  image: "stigt/debian-frr:latest"
  cmd: "/root/startup.sh"
  intfs:
  - name: {{index . "net0port0"}}
    address: 10.1.0.1/24
  - name: dummy0
    address: 192.168.0.1/32
- hostname: RA-1
  image: "stigt/debian-frr:latest"
  cmd: "/root/startup.sh"
  intfs:
  - name: {{index . "net0port1"}}
    address: 10.1.0.2/24
  - name: {{index . "net1port0"}}
    address: 10.2.0.2/24
- hostname: RA-2
  image: "stigt/debian-frr:latest"
  cmd: "/root/startup.sh"
  intfs:
  - name: {{index . "net1port1"}}
    address: 10.2.0.3/24
  - name: {{index . "net2port0"}}
    address: 10.3.0.3/24
- hostname: CA-2
  image: "stigt/debian-frr:latest"
  cmd: "/root/startup.sh"
  intfs:
  - name: {{index . "net2port1"}}
    address: 10.3.0.4/24
  - name: dummy0
    address: 192.168.0.2/32
